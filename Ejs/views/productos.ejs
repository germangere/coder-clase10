<%- include('./head'); %>
  <div class="container">
    <h1 class="display-1 text-center">Lista de productos</h1>
    <br>
    <hr><br>

    <% if (hayProductos) { %>
      <div class="table-responsive">
        <table class="table table-dark">
          <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Imagen</th>
          </tr>
          <% products.forEach(product=> { %>
            <tr>
              <td>
                <%= product.title %>
              </td>
              <td>
                <%= product.price %>
              </td>
              <td>
                <%= product.img %>
              </td>
            </tr>
            <% }) %>
        </table>
      </div>
      <% } else { %>
        <div class="alert alert-danger" role="alert">
          No hay productos cargados
        </div>
        <% } %>

          <div class="d-flex justify-content-center">
            <a href="/" type="button" class="btn btn-primary">Cargar productos</a>
          </div>
  </div>
  <%- include('./footer'); %>