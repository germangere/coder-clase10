html
  head
    link(
      rel="stylesheet",
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css",
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65",
      crossorigin="anonymous"
      )
    title="Plantilla PUG"
  body
    div(class="container")
      h1(class="display-1 text-center")="Lista de Productos"

      if hayProductos
        div(class="table-respondive")
          table(class="table table-dark")
            tr
              th="Producto"
              th="Precio"
              th="Imagen"
            each product in products
              tr
                td=product.title
                td=product.price
                td=product.img
      else
        div(class="alert alert-danger" role="alert")="No hay productos cargados"

      div(class="d-flex justify-content-center")
        a(href="/" type="button" class="btn btn-primary")="Cargar Productos"