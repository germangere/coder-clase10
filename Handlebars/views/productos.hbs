<div class="container">
  <h1 class="display-1 text-center">Lista de productos</h1>
  <br>
  <hr><br>

  {{#if hayProductos}}
  <div class="table-responsive">
    <table class="table table-dark">
      <tr>
        <th>Producto</th>
        <th>Precio</th>
        <th>Imagen</th>
      </tr>
      {{#each products}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td>{{this.img}}</td>
      </tr>
      {{/each}}
    </table>
  </div>
  {{else}}
  <div class="alert alert-danger" role="alert">
    No hay productos cargados
  </div>
  {{/if}}

  <div class="d-flex justify-content-center">
    <a href="/" type="button" class="btn btn-primary">Cargar productos</a>
  </div>
</div>